<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.ambedo.MainActivity">

    <TextView
        android:id="@+id/ambedo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="24dp"
        android:text="@string/app_name"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/immerse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ambedo"
        android:layout_centerHorizontal="true"
        android:text="@string/immerse"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/immerse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="64dp"
        android:text="@string/music_suggestion"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/hiphop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:text="@string/hiphop"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/metal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/desc"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="48dp"
        android:text="@string/metal"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hiphop"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:text="@string/rock"
        android:textSize="24sp" />


</RelativeLayout>
