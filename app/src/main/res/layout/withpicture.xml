<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="4dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/band_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/band_pic"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Band Name"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/songs_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/band_name_text_view"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/band_pic"
        tools:text="Notable Songs: \ntest test test test\n testing\n testing\n testing"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/band_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/band_name_text_view" />


</RelativeLayout>